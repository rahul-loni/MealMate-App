<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners android:radius="40dp"/>

    <!-- Dark Gradient Background -->
    <gradient
        android:angle="90"
        android:startColor="#1A1A1A"
    android:centerColor="#333333"
    android:endColor="#000000"
    android:type="linear"/>

    <!-- Border Stroke -->
    <stroke android:width="2dp" android:color="#FFD700"/> <!-- Gold border for contrast -->

    <!-- Padding -->
    <padding android:left="1dp" android:right="10dp" android:top="12dp" android:bottom="12dp"/>
</shape>
