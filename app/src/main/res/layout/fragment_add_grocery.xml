<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#040404"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"

        android:elevation="4dp">

        <!-- 🖼 Image Preview -->
        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/mealmate_logo"
            android:background="@drawable/image_border"
            android:layout_marginBottom="12dp" />

        <!-- 📸 Select Image Button (Red Theme) -->
        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Select Image"
            android:backgroundTint="#F0DB20"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- 📝 Input Fields -->
        <EditText
            android:id="@+id/editItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item Name"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textColorHint="@color/white"
            android:inputType="numberDecimal"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editItemQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Quantity"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editItemCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/editStoreLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Store Location"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:background="@drawable/edittext_bg"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- 💾 Save Button (Black Theme) -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:backgroundTint="#F0DB20"
            android:textColor="@color/black"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="4dp"/>
    </LinearLayout>
</ScrollView>
